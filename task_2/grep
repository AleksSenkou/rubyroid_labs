#!/usr/bin/env ruby

def get_file_as_array(file_name)
	data = []
	File.open(file_name, "r").each do |file|
		data << file 
	end	
	data
end


	 
case ARGV[0]
	when "-A"
		3.upto(ARGV.count - 3) do |which|
			puts "File '#{ARGV[which]}', symbol #{ARGV[2]}:"
			file_lines = get_file_as_array(ARGV[which])	
			file_lines.each_with_index do |line, i|
				puts file_lines[i - ARGV[1]..i + ARGV[1]] if line["#{ARGV[0]}"]
			end
		end
	when "-e"
		puts "-e"
	when "-R"
		puts "-R"
	when "-Z"
		puts "-Z"
	else
		puts "No such comand"
end


#puts file_lines
#p lines_count
#p Dir.entries "/"

